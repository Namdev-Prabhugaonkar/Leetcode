class Solution {
public:
    string generateTheString(int n) {
        string ans;
        if(n==0){
            return 0;
        }
       else if(n%2!=0){
            for(int i=0;i<n;i++){
                char c='a';
                ans+=c;
            }
        }
        else{
            int k=n-1;
            char c2='b';
            for(int i=0;i<k;i++){
                ans+='a';
            }
            ans+=c2;
        }
        
        return ans;
    }
};
